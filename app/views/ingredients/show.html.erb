<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @ingredient.name %>
</p>

<strong><%= 'Recipes that use ' + @ingredient.name + ':' %></strong>
<% @ingredient.recipes.each do |recipe| %>
    <ul>
      <li>
        <%= link_to recipe.name, recipe_path(recipe.id) %>
      </li>
    </ul>
<% end %>